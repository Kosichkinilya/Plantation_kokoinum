<Window
    x:Class="Plantation_kokoinum.Log_in_window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plantation_kokoinum"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Авторизация"
    Width="262"
    Height="300"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Label Margin="10,147,10,51" Content="Авторизация: &#xD;&#xA;Админ - 123 &#xD;&#xA;Гость - 1234" />
        <Label Margin="10,10,125,247" Content="Введите логин" />
        <TextBox x:Name="tbLogin" Margin="10,37,10,215" />
        <Label Margin="10,74,125,179" Content="Введите пароль" RenderTransformOrigin="0.476,0.878" />
        <TextBox x:Name="tbPassword" Margin="10,110,10,142" />
        <Button
            Margin="145,238,10,10"
            Click="Join_Click"
            Content="Войти" />
        <Button
            Margin="10,238,147,10"
            Click="Exit_Click"
            Content="Выйти" />
    </Grid>
</Window>
